<?xml version="1.0" encoding="utf-8"?>
<rf.androidovshchik.vkadvancedposting.views.layout.WallPostLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/progressBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        app:mpb_useIntrinsicPadding="false"
        app:mpb_indeterminateTint="@color/cornflower_blue_two"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar"/>

    <rf.androidovshchik.vkadvancedposting.views.VKButton
        android:id="@+id/actionCancel"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="12dp"
        android:layout_alignParentBottom="true"
        android:text="@string/main.button.cancel"
        android:theme="@style/VKButton.Cancel"/>

    <rf.androidovshchik.vkadvancedposting.views.VKButton
        android:id="@+id/actionRepeat"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="12dp"
        android:layout_alignParentBottom="true"
        android:text="@string/main.button.repeat"
        android:theme="@style/VKButton.Repeat"/>

</rf.androidovshchik.vkadvancedposting.views.layout.WallPostLayout>